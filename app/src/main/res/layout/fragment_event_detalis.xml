<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".ui.home.EventDetalisFragment">

    <Button
        android:id="@+id/btnBuy"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#51A9EF"
        android:fontFamily="@font/roboto"
        android:text="Buy Ticket"
        android:textColor="#040303"
        android:textSize="17dp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:iconTint="#6B37C8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventTitle" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="138dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#51A6EA"
        android:fontFamily="@font/roboto"
        android:navigationIcon="@drawable/ic_baseline_sharp_share_24"
        android:text="Share"
        android:textColor="#0C0B0B"
        android:textSize="17dp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_baseline_sharp_share_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toEndOf="@+id/btnAbout"
        app:layout_constraintTop_toBottomOf="@+id/btnBuy" />

    <Button
        android:id="@+id/btnReview"
        android:layout_width="138dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#5BAEF1"
        android:fontFamily="@font/roboto"
        android:navigationIcon="@drawable/ic_rate_review_24"
        android:text="Review"
        android:textColor="#0C0A0A"
        android:textSize="17dp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_rate_review_24"
        app:layout_constraintEnd_toEndOf="@+id/btnShare"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnShare"
        app:layout_constraintTop_toBottomOf="@+id/btnShare" />

    <Button
        android:id="@+id/btnDateTime"
        android:layout_width="148dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#4EA5EA"
        android:drawableStart="@drawable/ic_twotone_date_range_26"
        android:fontFamily="@font/roboto"
        android:navigationIcon="@drawable/ic_twotone_date_range_26"
        android:text="Time / Date"
        android:textAllCaps="false"
        android:textColor="#0B0D0E"
        android:textSize="14dp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_twotone_date_range_26"
        app:layout_constraintEnd_toEndOf="@+id/btnAbout"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/btnAbout"
        app:layout_constraintTop_toBottomOf="@+id/btnAbout" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="148dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#56A7E8"
        android:fontFamily="@font/roboto"
        android:navigationIcon="@drawable/ic_round_expand_circle_down_28"
        android:text="About Event"
        android:textColor="#0B0909"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_round_expand_circle_down_28"
        app:iconTint="#0A0A0B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBuy" />

    <ImageView
        android:id="@+id/eventImage"
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel"
        android:layout_width="406dp"
        android:layout_height="270dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/eventTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carousel" />

</androidx.constraintlayout.widget.ConstraintLayout>